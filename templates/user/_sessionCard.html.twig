<div class="card">
    <div class="card-header d-flex justify-content-between align-items-center">
        <h5>{{ session.subject }}</h5>

        <div class="d-flex justify-content-center align-items-center">
            <a class="text-custom-blue mx-1" href="{{ path("app_session_show", {id: session.id}) }}">
                <span class="material-icons">visibility</span>
            </a>

            {% if session.ownerUser.id == app.user.id %}
                <a class="text-custom-green mx-1" href="{{ path('app_session_edit', {id: session.id}) }}">
                    <span class="material-icons-outlined">edit</span>
                </a>

                <a class="text-danger mx-1" href="#">
                    <span class="material-icons">delete</span>
                </a>
            {% endif %}
        </div>
    </div>

    <div class="card-body">
        <p class="card-text">{{ session.description }}</p>
    </div>

    <div class="card-footer text-muted d-flex justify-content-between">
        <small class="d-flex justify-content-start align-items-center">
            <span class="material-icons-outlined me-2">timer</span>
            {{ 'DÃ©but : ' ~ session.startTime|date('d/m/y H:i') ~ ' - Fin : ' ~ session.endTime|date('d/m/y H:i') }}
        </small>

        <small class="d-flex justify-content-start align-items-center">
            <span class="material-icons-outlined me-2">{% if session.type == 'online' %}public{% else %}public_off{% endif %}</span>
            {{ session.displayType }}
        </small>
    </div>
</div>
