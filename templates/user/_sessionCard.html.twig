<div class="card">
    <div class="card-header d-flex justify-content-between align-items-center">
        <h5>{{ session.subject }}</h5>

        {% if session.ownerUser.id == app.user.id %}
            <div class="d-flex justify-content-center align-items-center">
                <a class="text-success me-1" href="{{ path('app_session_edit', {id: session.id}) }}">
                    <span class="material-icons-outlined">edit</span>
                </a>

                <a class="text-danger ms-1" href="#">
                    <span class="material-icons">delete</span>
                </a>
            </div>
        {% endif %}
    </div>

    <div class="card-body">
        <p class="card-text">{{ session.description }}</p>
    </div>

    <div class="card-footer text-muted d-flex justify-content-between">
        <small>{{ 'DÃ©but : ' ~ session.startTime|date('d/m/y H:i') ~ ' - Fin : ' ~ session.endTime|date('d/m/y H:i') }}</small>
        <small>{{ session.displayType }}</small>
    </div>
</div>
