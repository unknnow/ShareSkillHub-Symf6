{% extends 'base.html.twig' %}

{% block title %}Les utilisateurs{% endblock %}

{% block body %}
    <div class="container my-4">
        <div class="card border-0 shadow">
            <div class="card-body p-4">
                <div class="row">
                    <div class="col">
                        <h3 class="d-flex justify-content-start align-items-center">
                            <span class="material-icons me-2">group</span>
                            Les utilisateurs :
                        </h3>
                    </div>

                    <div class="col-4">
                        {{ include('user/_userSearch.html.twig') }}
                    </div>
                </div>

                <table class="table table-hover">
                    <tbody>
                    {% if users|length > 0 %}
                        {% for user in users %}
                            <tr>
                                <td class="rounded">
                                    {{ include('user/_userCard.html.twig', {'user': user}) }}
                                </td>
                            </tr>
                        {% endfor %}
                    {% else %}
                        <tr>
                            <td class="d-flex justify-content-center">
                                <p class="text-center">Aucun utilisateurs</p>
                            </td>
                        </tr>
                    {% endif %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
{% endblock %}
