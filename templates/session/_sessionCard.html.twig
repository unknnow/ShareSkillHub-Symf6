<div class="card">
    <div class="card-header d-flex justify-content-between align-items-center">
        <h5>{{ session.subject }}</h5>

        <a class="btn btn-sm btn-primary d-flex justify-content-center align-items-center" href="{{ path('app_session_show', {id: session.id}) }}">
            <span class="material-icons">visibility</span>
        </a>
    </div>

    <div class="card-body">
        <p class="card-text">{{ session.description }}</p>

        <hr>

        <p class="d-flex justify-content-start align-items-center"><span class="material-icons me-2">group</span> Participants :</p>

        <div class="d-flex flex-wrap">
            {% for user in session.participantUser %}
                <span class="badge bg-info me-2 mb-2">
                    {{ user.displayName }}
                </span>
            {% endfor %}
        </div>
    </div>

    <div class="card-footer text-muted d-flex justify-content-between">
        <small class="d-flex justify-content-start align-items-center">
            <span class="material-icons-outlined me-2">timer</span>
            {{ 'DÃ©but : ' ~ session.startTime|date('d/m/y H:i') ~ ' - Fin : ' ~ session.endTime|date('d/m/y H:i') }}
        </small>

        <small class="d-flex justify-content-start align-items-center">
            <span class="material-icons-outlined me-2">{% if session.type == 'online' %}public{% else %}public_off{% endif %}</span>
            {{ session.displayType }}
        </small>
    </div>
</div>
